<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/note_card_radius"
    app:contentPadding="@dimen/padding_default">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/note_item_subject_text_size"
            android:textStyle="bold"
            tools:text="Я заголовок" />

        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/note_item_description_size"
            tools:text="Описание заметки" />

        <TextView
            android:id="@+id/date_of_creation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/date_of_creation"
            android:padding="@dimen/padding_default"
            android:singleLine="true"
            android:textSize="@dimen/size_text_default" />

    </LinearLayout>

</androidx.cardview.widget.CardView>